<h1 class="text-center"><%= t "products.index" %></h1>

<div class="pag"><%= paginate @products %></div>
<% if @cart && logged_in? %>
  <% if @cart.user_id == current_user.id %>
    <%= link_to t("carts.show"), cart_path(@cart),
      class:"btn btn-xs btn-primary cart" %>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <% @products.each do |p| %>
      <div class="col-sm-4 col-md-4">
        <div class="thumbnail">
          <%= image_tag p.image_url %>
          <div class="caption">
            <h4><%= link_to p.title, product_path(p) %></h4>
            <p><%= p.description %></p>
            <p><%= number_to_currency p.price,
              unit: Settings.unit, format: "%n %u", precision: 0 %></p>
          </div>
          <p><%= link_to t("products.add_cart"), line_items_path(product_id: p.id),
            method: :post, class: "btn btn-primary add-cart" %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
