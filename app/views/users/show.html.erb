<h1 class="text-center"><%= t "users.show" %>: <%= @user.name %></h1>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ol>
        <li><%= t "users.email" %>: <%= @user.email %></li>
        <li><%= t "users.name" %>: <%= @user.name %></li>
      </ol>
      <% if current_user == @user %>
        <%= link_to t("users.delete"), @user, method: :delete,
          data: {confirm: t("users.delete?")}, class: "btn btn-danger" %>
        <%= render partial: "orders/order_list_user", locals: {orders: @user.orders} %>
      <% end %>
    </div>
  </div>
</div>
